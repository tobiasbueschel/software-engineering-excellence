{
  "name": "software-engineering-excellence",
  "description": "Proven practices for developing software successfully",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "serve": "docusaurus serve",
    "clear": "docusaurus clear",
    "prepare": "husky install",
    "lint": "prettier --check .",
    "format": "prettier --ignore-unknown --write .",
    "spell:check": "cspell 'docs/**/*.{md,mdx}' --show-suggestions",
    "spell:ignore": "cspell --words-only --unique 'docs/**/*.{md,mdx}' | sort --ignore-case >> dictionary.txt"
  },
  "dependencies": {
    "@docusaurus/core": "^3.6.3",
    "@docusaurus/preset-classic": "^3.6.3",
    "@docusaurus/theme-mermaid": "^3.6.3",
    "@easyops-cn/docusaurus-search-local": "^0.44.0",
    "@mdx-js/react": "^3.0.0",
    "cytoscape": "^3.23.0",
    "react": "^19.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.7",
    "cspell": "^6.31.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "2.8.7"
  },
  "lint-staged": {
    "*": [
      "npm run format"
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
